# Demo image: adds python runtime deps for InfiniLM inference server
FROM infinilm-svc:latest

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Minimal deps for InfiniLM python server
RUN pip3 install --no-cache-dir fastapi uvicorn

RUN python3 --version && python3 -c "import fastapi, uvicorn; print('fastapi/uvicorn installed')"
